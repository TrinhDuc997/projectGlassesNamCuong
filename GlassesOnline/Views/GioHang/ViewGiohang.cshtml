@using GlassesOnline.Models
@model IEnumerable<GioHang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/_LayoutIndex.cshtml";
}
<div id="content">
    <!--Breadcrumb Part Start-->
 
    <h1>Giỏ Hàng &nbsp;</h1>
    <form enctype="multipart/form-data" method="post" action="#">
        <div class="cart-info">
            <table>
                <thead>
                    <tr>
                        <td class="image">Ảnh Sản Phẩm</td>
                        <td class="name">Tên Sản Phẩm</td>
                        <td class="quantity">Số Lượng</td>
                        <td class="price">Đơn Giá</td>
                        <td class="total">Tổng Tiền</td>
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="image"><a href="#"><img title="Bag Lady" src="~/Content/Images/product/@item.AnhSP" style="width:60px;height:60px"></a></td>
                                <td class="name"><a href="#">@item.TenSP</a></td>
                                <td class="quantity">
                                    <input type="text" size="1" value="@item.SoLuongSP" name="" class="w30" id="SoLuongSPGioHang">
                                    <a href="#"><img type="image" title="Cập Nhật Sản phẩm" alt="Update" src="~/Content/Images/Design/update.png" /></a>
                                    <a href="#"><img title="Xóa Sản Phẩm" alt="Remove" src="~/Content/Images/Design/remove-small.png"></a>
                                </td>
                                <td class="price">@item.DonGiaSP VND</td>
                                <td class="total">@item.TongTien VND</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </form>
    
    
    <div class="cart-total" style="border-top: 1px solid #ffffff;
">
        <table id="total" >
            <tbody>              
                <tr>
                    <td class="right"><b>Tổng Cộng:</b></td>
                    <td class="right">$608.41</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="buttons">
        <div class="right"><a class="button" href="checkout.html">Thanh Toán ></a></div>
        <div class="center"><a class="button" href="#" style="float: left;"> < Tiếp Tục Mua</a></div>
    </div>
</div>
